input, textarea, pre, select
	font-family 'Poppins', sans-serif
	color brandGrey
	outline none
	background-color white

input, select
	box-shadow 3px 6px 19px -10px #CCCCCC
	border 3px white solid
	border-radius 25px
	padding 15px
	color brandGrey

input
	width 300px

select
	width 200px

button
	border none
	background transparent
	cursor pointer
	outline none
	font-family 'Poppins', sans-serif

.activeButton
	border-bottom 5px solid brandGreen

.buttonPanel
	display flex
	justify-content space-between
	align-items flex-start

	button
		font-size 14px
		margin-bottom 5px
		text-transform uppercase
		color brandGrey

.icon
	width 20px

.icon2
	width 14px
	margin-right 10px

//BLOBS
@keyframes from0to360 {
	from{transform:rotate(0)}
	to{transform:rotate(360deg)}
}

@keyframes from360to0 {
	from{transform:rotate(360deg)}
	to{transform:rotate(0deg)}
}

.blobs
	pointer-events none
	position absolute

//SIGNUP & SIGNIN
.buttonswithArrow
	padding 15px
	margin-bottom 20px
	color brandGrey
	font-weight bold
	width 50%
	align-self center

	.arrow
		width 20px
		position relative
		top 8px
		left 3px
		color white

::placeholder
	color brandGrey

// NAVIGATION
.nav
	display flex
	z-index 3
	width 90%
	padding-top 30px
	padding-bottom 30px
	font-size 14px

	div
		width 50%

		a
			color brandGrey
			text-decoration none

			&.router-link-exact-active
				border-bottom 5px solid brandGreen

//ABOUT
.aboutContainers
	display flex
	justify-content center
	align-items center

//MODALS
.greyLayer
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color black
	opacity 0.7
	z-index 4
